<Page class="page" loaded="onPageLoaded" 
    xmlns:sc="nativescript-scratchview" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Home"></Label>
    </ActionBar>

    <StackLayout>
        <sc:ScratchView height="200" width="200" strokeWidth="10" id="scratchView">
            <Image height="200" width="200" stretch="aspectFill" src="~/images/back.jpg"></Image>
            <Image height="200" width="200" stretch="aspectFill" src="~/images/scratch.png"></Image>
        </sc:ScratchView>
        <Button text="Reveal" tap="reveal" />
    </StackLayout>
</Page>
